@model IEnumerable<Gifter.Models.PersonProperyModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                Property Name
            </th>
            <th>
                Property Value
            </th>
            <th>
                @Html.ActionLink("Add Property", "CreateProperty", new { id = ViewBag.id })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditProperty", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteProperty", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
